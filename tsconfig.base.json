{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngx-nations/core": ["libs/core/src/index.ts"],
      "@ngx-nations/icon": ["libs/icon/src/index.ts"],
      "@ngx-nations/tw-icons": ["libs/tw-icons/src/index.ts"],
      "@ngx-nations/lp-icons": ["libs/lp-icons/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
